    font-family: fonteDiferente;
    src: url(Stylish-Regular.ttf);
}
header{
    width: 100%;
    height: 20vh;
    /*entre display e align serve para ajustar a (nav) no centro
    do site ou em qualquer parte */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(206, 221, 219);
}
nav{
    width: 50%;
    height: 50%;
   /* background-color: rgb(20, 99, 86);*/
    align-items: center;
}
